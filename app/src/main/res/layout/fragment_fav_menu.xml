<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    tools:context=".FavMenuFragment">

    <TextView
        android:id="@+id/tvFavName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="247dp"
        android:fontFamily="@font/sourcesansprosemibold"
        android:text="@string/app_name"
        android:textAllCaps="false"
        android:textColor="#F5F1F7"
        android:textSize="51sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bStartBalancePage"
        android:layout_width="274dp"
        android:layout_height="74dp"
        android:layout_marginTop="-174dp"
        android:background="@drawable/button2"
        android:fontFamily="@font/sourcesansprosemibold"
        android:text="Start"
        android:textAllCaps="false"
        android:textColor="#F5F1F7"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvFavName" />

    <Button
        android:id="@+id/bReadPP"
        android:layout_width="274dp"
        android:layout_height="74dp"
        android:layout_marginTop="-95dp"
        android:background="@drawable/button2"
        android:fontFamily="@font/sourcesansprosemibold"
        android:text="Privacy Policy"
        android:textAllCaps="false"
        android:textColor="#F5F1F7"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bStartBalancePage" />

    <Button
        android:id="@+id/bCloseApp"
        android:layout_width="274dp"
        android:layout_height="74dp"
        android:background="@drawable/button2"
        android:fontFamily="@font/sourcesansprosemibold"
        android:text="Exit"
        android:textAllCaps="false"
        android:textColor="#F5F1F7"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bReadPP" />

</androidx.constraintlayout.widget.ConstraintLayout>