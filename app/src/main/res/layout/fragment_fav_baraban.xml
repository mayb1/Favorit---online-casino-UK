<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    tools:context=".FavBarabanFragment">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="160dp"
        android:layout_marginTop="61dp"
        android:src="@drawable/slot"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bStartGame"
        android:layout_width="176dp"
        android:layout_height="81dp"
        android:background="@drawable/button2"
        android:fontFamily="@font/sourcesansprosemibold"
        android:text="Start"
        android:textAllCaps="false"
        android:textColor="#FBF7F9"
        android:textSize="31sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toStartOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/bStartGame"
        app:layout_constraintEnd_toStartOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView">

        <Button
            android:id="@+id/bSlotBet100"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="0.33"
            android:background="@drawable/button1"
            android:fontFamily="@font/sourcesansprosemibold"
            android:tag="100"
            android:text="Bet 100"
            android:textAllCaps="false"
            android:textColor="#C33066"
            android:textSize="26sp" />

        <Button
            android:id="@+id/bSlotBet250"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="0.33"
            android:background="@drawable/button1"
            android:fontFamily="@font/sourcesansprosemibold"
            android:tag="250"
            android:text="Bet 250"
            android:textAllCaps="false"
            android:textColor="#C33066"
            android:textSize="26sp" />

        <Button
            android:id="@+id/bSlotBet500"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="0.33"
            android:background="@drawable/button1"
            android:fontFamily="@font/sourcesansprosemibold"
            android:tag="500"
            android:text="Bet 500"
            android:textAllCaps="false"
            android:textColor="#C33066"
            android:textSize="26sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:adjustViewBounds="true"
        android:src="@drawable/score"
        app:layout_constraintBottom_toTopOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvFavGamePoints"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sourcesansprosemibold"
        android:text=""
        android:textAllCaps="false"
        android:textColor="#FBF7F9"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="@+id/imageView2"
        app:layout_constraintStart_toStartOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="@+id/imageView2" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="9dp"
        android:layout_marginBottom="11dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="14dp"
            android:layout_weight="0.33"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivFavItem1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="clip_horizontal|center"
                android:layout_marginRight="15dp"
                android:layout_weight="0.2"
                android:src="@drawable/ffav1" />

            <ImageView
                android:id="@+id/ivFavItem2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="clip_horizontal|center"
                android:layout_marginRight="10dp"
                android:layout_weight="0.2"
                android:src="@drawable/ffav2" />

            <ImageView
                android:id="@+id/ivFavItem3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="clip_horizontal|center"
                android:layout_weight="0.2"
                android:src="@drawable/ffav3" />

            <ImageView
                android:id="@+id/ivFavItem4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="clip_horizontal|center"
                android:layout_marginLeft="18dp"
                android:layout_weight="0.2"
                android:src="@drawable/ffav3" />

            <ImageView
                android:id="@+id/ivFavItem5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="clip_horizontal|center"
                android:layout_marginLeft="21dp"
                android:layout_weight="0.2"
                android:src="@drawable/ffav4" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="9dp"
            android:layout_marginBottom="11dp"
            android:layout_weight="0.33"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivFavItem6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="clip_horizontal|center"
                android:layout_marginRight="15dp"
                android:layout_weight="0.2"
                android:src="@drawable/ffav5" />

            <ImageView
                android:id="@+id/ivFavItem7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="clip_horizontal|center"
                android:layout_marginRight="10dp"
                android:layout_weight="0.2"
                android:src="@drawable/ffav8" />

            <ImageView
                android:id="@+id/ivFavItem8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="clip_horizontal|center"
                android:layout_weight="0.2"
                android:src="@drawable/ffav7" />

            <ImageView
                android:id="@+id/ivFavItem9"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="clip_horizontal|center"
                android:layout_marginLeft="18dp"
                android:layout_weight="0.2"
                android:src="@drawable/ffav7" />

            <ImageView
                android:id="@+id/ivFavItem10"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="clip_horizontal|center"
                android:layout_marginLeft="21dp"
                android:layout_weight="0.2"
                android:src="@drawable/ffav1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="9dp"
            android:layout_marginBottom="7dp"
            android:layout_weight="0.33"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivFavItem11"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="clip_horizontal|center"
                android:layout_marginRight="15dp"
                android:layout_weight="0.2"
                android:src="@drawable/ffav5" />

            <ImageView
                android:id="@+id/ivFavItem12"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="clip_horizontal|center"
                android:layout_marginRight="10dp"
                android:layout_weight="0.2"
                android:src="@drawable/ffav2" />

            <ImageView
                android:id="@+id/ivFavItem13"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="clip_horizontal|center"
                android:layout_weight="0.2"
                android:src="@drawable/ffav2" />

            <ImageView
                android:id="@+id/ivFavItem14"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="clip_horizontal|center"
                android:layout_marginLeft="18dp"
                android:layout_weight="0.2"
                android:src="@drawable/ffav4" />

            <ImageView
                android:id="@+id/ivFavItem15"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="clip_horizontal|center"
                android:layout_marginLeft="21dp"
                android:layout_weight="0.2"
                android:src="@drawable/ffav8" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>